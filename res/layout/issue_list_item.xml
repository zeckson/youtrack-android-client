<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="horizontal"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:padding="5sp">
    <TextView a:id="@+id/priority"
              a:layout_width="18sp"
              a:layout_height="18sp"
              a:layout_gravity="center_vertical|center_horizontal"
              a:text="N"
              a:gravity="center_vertical|center_horizontal"
              a:textAppearance="@android:style/TextAppearance.Small"
              a:textColor="@color/priority_normal"
              a:background="@color/priority_background_normal"/>
    <TextView a:id="@+id/issue_id"
              a:text="ID-123"
              a:textAppearance="@android:style/TextAppearance.Medium"
              a:layout_marginLeft="5sp"
              a:layout_marginRight="5sp"
              a:maxLines="1"
              a:layout_height="wrap_content"
              a:layout_width="wrap_content"/>
    <TextView a:id="@+id/summary"
              a:text="Short info about issue"
              a:textAppearance="@android:style/TextAppearance.Small"
              a:maxLines="1"
              a:fadingEdge="horizontal"
              a:gravity="center_vertical"
              a:layout_height="fill_parent"
              a:layout_width="wrap_content"/>
</LinearLayout>